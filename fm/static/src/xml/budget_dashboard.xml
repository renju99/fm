<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="fm.BudgetDashboardClient">
        <div class="o_budget_dashboard p-3">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="mb-1">
                        <i class="fa fa-money me-2 text-success"/>
                        Budget vs Actual Dashboard
                    </h2>
                    <p class="text-muted mb-0">Interactive budget analysis with real-time insights and drilldown</p>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" t-on-click="onExport">
                        <i class="fa fa-download me-1"/>
                        Export
                    </button>
                    <button class="btn btn-primary" t-on-click="onRefresh" t-att-disabled="state.loading">
                        <i class="fa fa-refresh me-1" t-att-class="{'fa-spin': state.loading}"/>
                        Refresh
                    </button>
                </div>
            </div>
            
            <!-- Filters -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <!-- Period Filter -->
                        <div class="col-lg-2 col-md-4 col-sm-6">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-calendar me-1"/>Period
                            </label>
                            <select class="form-select" t-on-change="onPeriodChange" t-model="state.filters.period_type">
                                <option value="today">Today</option>
                                <option value="week">This Week</option>
                                <option value="month" selected="selected">This Month</option>
                                <option value="quarter">This Quarter</option>
                                <option value="year">This Year</option>
                                <option value="custom">Custom Range</option>
                            </select>
                        </div>
                        
                        <!-- Custom Date From -->
                        <div class="col-lg-2 col-md-4 col-sm-6" t-if="state.filters.period_type === 'custom'">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-calendar-o me-1"/>From Date
                            </label>
                            <input type="date" class="form-control" t-on-change="onDateFromChange" t-model="state.filters.date_from"/>
                        </div>
                        
                        <!-- Custom Date To -->
                        <div class="col-lg-2 col-md-4 col-sm-6" t-if="state.filters.period_type === 'custom'">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-calendar-check-o me-1"/>To Date
                            </label>
                            <input type="date" class="form-control" t-on-change="onDateToChange" t-model="state.filters.date_to"/>
                        </div>
                        
                        <!-- Cost Center Filter -->
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-building me-1"/>Cost Center
                            </label>
                            <select class="form-select" t-on-change="onCostCenterChange" t-model="state.filters.cost_center_id">
                                <option value="">All Cost Centers</option>
                                <t t-foreach="state.cost_centers" t-as="cc" t-key="cc.id">
                                    <option t-att-value="cc.id">
                                        <t t-esc="cc.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Category Filter -->
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-tags me-1"/>Expense Category
                            </label>
                            <select class="form-select" t-on-change="onCategoryChange" t-model="state.filters.category_id">
                                <option value="">All Categories</option>
                                <t t-foreach="state.categories" t-as="cat" t-key="cat.id">
                                    <option t-att-value="cat.id">
                                        <t t-esc="cat.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Clear Filters -->
                        <div class="col-lg-1 col-md-2 col-sm-6">
                            <button class="btn btn-outline-secondary w-100" t-on-click="onClearFilters" title="Clear all filters">
                                <i class="fa fa-times"/>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loading State -->
            <div t-if="state.loading" class="text-center py-5">
                <i class="fa fa-spinner fa-spin fa-3x text-primary"/>
                <p class="mt-3 text-muted">Loading budget data...</p>
            </div>

            <!-- Error State -->
            <div t-if="state.error and !state.loading" class="alert alert-danger">
                <i class="fa fa-exclamation-triangle me-2"/>
                <t t-esc="state.error"/>
            </div>

            <!-- Dashboard Content -->
            <div t-if="!state.loading and !state.error">
                <!-- KPI Cards -->
                <div class="row g-3 mb-4">
                    <t t-foreach="state.kpis" t-as="kpi" t-key="kpi_index">
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card shadow-sm h-100 border-0 kpi-card-clickable" 
                                 t-on-click="() => this.onKPIClick(kpi.key)"
                                 style="transition: all 0.3s ease; cursor: pointer;"
                                 t-att-title="'Click to view details for ' + kpi.name">
                                <div class="card-body d-flex align-items-center p-3">
                                    <div t-attf-class="rounded-circle p-3 me-3 bg-{{kpi.color}}-subtle">
                                        <i t-attf-class="fa {{kpi.icon}} fa-2x text-{{kpi.color}}"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="text-muted small mb-1 text-uppercase fw-semibold">
                                            <t t-esc="kpi.name"/>
                                        </div>
                                        <div class="h3 mb-1 fw-bold">
                                            <t t-esc="kpi.value"/>
                                        </div>
                                        <div class="small text-muted" t-if="kpi.subtitle">
                                            <t t-esc="kpi.subtitle"/>
                                        </div>
                                    </div>
                                    <div class="align-self-end">
                                        <i class="fa fa-external-link-square text-primary opacity-50"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Charts -->
                <div class="row g-3 mb-4" t-if="state.charts.length > 0">
                    <t t-foreach="state.charts" t-as="chart" t-key="chart_index">
                        <div class="col-lg-12">
                            <div class="card shadow-sm border-0">
                                <div class="card-header bg-light border-bottom d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 fw-semibold">
                                        <i class="fa fa-bar-chart me-2 text-primary"/>
                                        <t t-esc="chart.title"/>
                                    </h5>
                                    <small class="text-muted">
                                        <i class="fa fa-info-circle me-1"/>
                                        Hover for details
                                    </small>
                                </div>
                                <div class="card-body">
                                    <div style="position: relative; height: 400px;">
                                        <canvas t-attf-id="budget_chart_{{chart_index}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Empty State -->
                <div t-if="state.kpis.length === 0" class="text-center py-5">
                    <i class="fa fa-inbox fa-4x text-muted mb-3"/>
                    <h4 class="text-muted">No Budget Data</h4>
                    <p class="text-muted">Create budgets and record expenses to see budget analysis.</p>
                </div>
            </div>
        </div>
    </t>

</templates>


