<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="facilities_management.MaintenanceDashboardTemplate">
        <div class="o_facilities_analytics_dashboard p-3">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="mb-1">
                        <i class="fa fa-wrench me-2 text-warning"/>
                        Maintenance Analytics Dashboard
                    </h2>
                    <p class="text-muted mb-0">Comprehensive maintenance operations overview</p>
                </div>
                <button class="btn btn-primary" t-on-click="onRefresh" t-att-disabled="state.loading">
                    <i class="fa fa-refresh me-1" t-att-class="{'fa-spin': state.loading}"/>
                    Refresh
                </button>
            </div>
            
            <!-- Filters Row - Maximum Filters -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <!-- Period Filter -->
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-calendar me-1"/>Period
                            </label>
                            <select class="form-select form-select-sm" t-on-change="onPeriodChange" t-model="state.filters.period_type">
                                <option value="today">Today</option>
                                <option value="week">This Week</option>
                                <option value="month" selected="selected">This Month</option>
                                <option value="quarter">This Quarter</option>
                                <option value="year">This Year</option>
                                <option value="custom">Custom Range</option>
                            </select>
                        </div>
                        
                        <!-- Date From -->
                        <div class="col-lg-2 col-md-3 col-sm-6" t-if="state.filters.period_type === 'custom'">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-calendar-o me-1"/>From
                            </label>
                            <input type="date" class="form-control form-control-sm" t-on-change="onDateFromChange" t-model="state.filters.date_from"/>
                        </div>
                        
                        <!-- Date To -->
                        <div class="col-lg-2 col-md-3 col-sm-6" t-if="state.filters.period_type === 'custom'">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-calendar-check-o me-1"/>To
                            </label>
                            <input type="date" class="form-control form-control-sm" t-on-change="onDateToChange" t-model="state.filters.date_to"/>
                        </div>
                        
                        <!-- Facility Filter -->
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-building me-1"/>Facility
                            </label>
                            <select class="form-select form-select-sm" t-on-change="onFacilityChange" t-model="state.filters.facility_id">
                                <option value="">All Facilities</option>
                                <t t-foreach="state.facilities" t-as="facility" t-key="facility.id">
                                    <option t-att-value="facility.id"><t t-esc="facility.name"/></option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Technician Filter -->
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-user me-1"/>Technician
                            </label>
                            <select class="form-select form-select-sm" t-on-change="onTechnicianChange" t-model="state.filters.technician_id">
                                <option value="">All Technicians</option>
                                <t t-foreach="state.technicians" t-as="tech" t-key="tech.id">
                                    <option t-att-value="tech.id"><t t-esc="tech.name"/></option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Team Filter -->
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-users me-1"/>Team
                            </label>
                            <select class="form-select form-select-sm" t-on-change="onTeamChange" t-model="state.filters.team_id">
                                <option value="">All Teams</option>
                                <t t-foreach="state.teams" t-as="team" t-key="team.id">
                                    <option t-att-value="team.id"><t t-esc="team.name"/></option>
                                </t>
                            </select>
                        </div>
                        
                        <!-- Priority Filter -->
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-flag me-1"/>Priority
                            </label>
                            <select class="form-select form-select-sm" t-on-change="onPriorityChange" t-model="state.filters.priority">
                                <option value="">All Priorities</option>
                                <option value="0">Very Low</option>
                                <option value="1">Low</option>
                                <option value="2">Normal</option>
                                <option value="3">High</option>
                                <option value="4">Critical</option>
                            </select>
                        </div>
                        
                        <!-- Maintenance Type Filter -->
                        <div class="col-lg-2 col-md-3 col-sm-6">
                            <label class="form-label small fw-semibold text-muted mb-1">
                                <i class="fa fa-wrench me-1"/>Type
                            </label>
                            <select class="form-select form-select-sm" t-on-change="onMaintenanceTypeChange" t-model="state.filters.maintenance_type">
                                <option value="">All Types</option>
                                <option value="preventive">Preventive</option>
                                <option value="corrective">Corrective</option>
                                <option value="predictive">Predictive</option>
                            </select>
                        </div>
                        
                        <!-- Clear Filters -->
                        <div class="col-lg-1 col-md-2 col-sm-6">
                            <button class="btn btn-outline-secondary btn-sm w-100" t-on-click="onClearFilters" title="Clear all filters">
                                <i class="fa fa-times"/>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loading -->
            <div t-if="state.loading" class="text-center py-5">
                <i class="fa fa-spinner fa-spin fa-3x text-primary"/>
                <p class="mt-3 text-muted">Loading analytics data...</p>
            </div>

            <!-- Error -->
            <div t-if="state.error and !state.loading" class="alert alert-danger">
                <i class="fa fa-exclamation-triangle me-2"/>
                <t t-esc="state.error"/>
            </div>

            <!-- Dashboard Content -->
            <div t-if="!state.loading and !state.error">
                <!-- KPI Cards -->
                <div class="row g-3 mb-4">
                    <t t-foreach="state.kpis" t-as="kpi" t-key="kpi_index">
                        <div class="col-xl-3 col-lg-4 col-md-6">
                            <div class="card shadow-sm h-100 border-0" style="transition: all 0.3s ease;">
                                <div class="card-body d-flex align-items-center p-3">
                                    <div t-attf-class="rounded-circle p-3 me-3 bg-{{kpi.color}}-subtle">
                                        <i t-attf-class="fa {{kpi.icon}} fa-2x text-{{kpi.color}}"/>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="text-muted small mb-1 text-uppercase fw-semibold">
                                            <t t-esc="kpi.name"/>
                                        </div>
                                        <div class="h3 mb-1 fw-bold">
                                            <t t-esc="kpi.value"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Charts -->
                <div class="row g-3 mb-4" t-if="state.charts.length > 0">
                    <t t-foreach="state.charts" t-as="chart" t-key="chart_index">
                        <div class="col-lg-6">
                            <div class="card shadow-sm border-0">
                                <div class="card-header bg-light border-bottom">
                                    <h5 class="mb-0 fw-semibold">
                                        <i class="fa fa-bar-chart me-2 text-primary"/>
                                        <t t-esc="chart.title"/>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div style="position: relative; height: 300px;">
                                        <canvas t-attf-id="maint_chart_{{chart_index}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Empty State -->
                <div t-if="state.kpis.length === 0" class="text-center py-5">
                    <i class="fa fa-inbox fa-4x text-muted mb-3"/>
                    <h4 class="text-muted">No Data Available</h4>
                    <p class="text-muted">Adjust filters or create work orders to see analytics.</p>
                </div>
            </div>
        </div>
    </t>

</templates>

