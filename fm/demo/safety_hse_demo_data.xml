            <field name="lighting_conditions">artificial</field>
            <field name="equipment_damage">True</field>
            <field name="damage_description">One chemical drum damaged, floor tiles stained</field>
            <field name="estimated_damage_cost">2500.00</field>
            <field name="immediate_actions">&lt;p&gt;Area immediately evacuated and cordoned off. Spill containment materials deployed. Emergency response team notified.&lt;/p&gt;</field>
