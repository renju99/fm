            <field name="area_secured">True</field>
            <field name="investigation_required">True</field>
            <field name="investigator_id" ref="base.user_admin"/>
            <field name="investigation_start_date">2024-08-16</field>
            <field name="root_cause_analysis">&lt;p&gt;Root cause: Inadequate maintenance schedule for chemical storage equipment. Contributing factors: Poor lighting, lack of regular inspections.&lt;/p&gt;</field>
            <field name="state">under_investigation</field>
            <field name="regulatory_reporting_required">True</field>
            <field name="regulatory_body">Environmental Protection Agency</field>
            <field name="medical_costs">0.00</field>
            <field name="lost_time_cost">0.00</field>
            <field name="repair_costs">2500.00</field>
            <field name="lessons_learned">&lt;p&gt;Need to implement monthly inspection schedule for all chemical storage containers. Improve lighting in storage areas.&lt;/p&gt;</field>
            <field name="preventive_measures">&lt;p&gt;Install automatic leak detection systems. Implement weekly visual inspections. Upgrade lighting system.&lt;/p&gt;</field>
