        <record id="demo_workorder_6" model="facilities.workorder">
            <field name="name">WO-DEMO-006</field>
            <field name="asset_id" ref="demo_asset_1"/>
            <field name="work_order_type">corrective</field>
            <field name="state">assigned</field>
            <field name="priority">5</field>
            <field name="start_date">2025-10-15</field>
            <field name="end_date">2025-10-17</field>
            <field name="estimated_duration">8.0</field>
            <field name="sla_id" ref="demo_sla_1"/>
            <field name="technician_id" ref="demo_technician_1"/>
            <field name="maintenance_team_id" ref="demo_team_1"/>
        </record>

    </data>
</odoo>