<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job to check expiring leases daily -->
        <record id="ir_cron_check_expiring_leases" model="ir.cron">
            <field name="name">Check Expiring Leases</field>
            <field name="model_id" ref="model_facilities_lease"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_expiring_leases()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
