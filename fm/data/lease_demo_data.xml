<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default Payment Terms -->
        <record id="payment_term_monthly" model="facilities.payment.term">
            <field name="name">Monthly</field>
            <field name="sequence">10</field>
            <field name="description">Payment due monthly on the 1st of each month</field>
        </record>

        <record id="payment_term_quarterly" model="facilities.payment.term">
            <field name="name">Quarterly</field>
            <field name="sequence">20</field>
            <field name="description">Payment due quarterly (every 3 months)</field>
        </record>

        <record id="payment_term_semi_annual" model="facilities.payment.term">
            <field name="name">Semi-Annual</field>
            <field name="sequence">30</field>
            <field name="description">Payment due twice per year (every 6 months)</field>
        </record>

        <record id="payment_term_annual" model="facilities.payment.term">
            <field name="name">Annual</field>
            <field name="sequence">40</field>
            <field name="description">Payment due once per year</field>
        </record>

        <record id="payment_term_bi_monthly" model="facilities.payment.term">
            <field name="name">Bi-Monthly</field>
            <field name="sequence">15</field>
            <field name="description">Payment due every two months</field>
        </record>
    </data>
</odoo>
