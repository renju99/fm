<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Mail Activity Type for SLA Escalations -->
        <record id="mail_activity_escalation" model="mail.activity.type">
            <field name="name">SLA Escalation</field>
            <field name="summary">SLA Escalation Alert</field>
            <field name="res_model">facilities.workorder</field>
            <field name="delay_count">0</field>
            <field name="delay_unit">days</field>
            <field name="icon">fa-exclamation-triangle</field>
            <field name="category">default</field>
            <field name="chaining_type">suggest</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>