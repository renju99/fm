<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_overwrite_workorder_wizard_form" model="ir.ui.view">
        <field name="name">asset.maintenance.schedule.overwrite.wizard.form</field>
        <field name="model">asset.maintenance.schedule.overwrite.wizard</field>
        <field name="arch" type="xml">
            <form string="Overwrite Work Order">
                <group>
                    <field name="schedule_id" readonly="1"/>
                    <field name="asset_id" readonly="1"/>
                    <field name="existing_workorder_id" readonly="1"/>
                </group>
                
                <div class="alert alert-warning" role="alert">
                    <field name="message" nolabel="1"/>
                </div>
                
                <group>
                    <field name="action" widget="radio" options="{'horizontal': true}"/>
                </group>
                
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_overwrite_workorder_wizard" model="ir.actions.act_window">
        <field name="name">Overwrite Work Order</field>
        <field name="res_model">asset.maintenance.schedule.overwrite.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
