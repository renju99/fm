<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tenant Directory Action -->
    <record id="action_res_partner_tenant_directory" model="ir.actions.act_window">
        <field name="name">Tenants</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_tenant', '=', True)]</field>
        <field name="context">{'default_is_tenant': True, 'default_customer_rank': 1, 'default_supplier_rank': 0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first tenant!
            </p>
            <p>
                Tenants are partners who lease facilities from landlords.
            </p>
        </field>
    </record>

    <!-- Clean Tenant Tree View -->
    <record id="view_res_partner_tenant_tree" model="ir.ui.view">
        <field name="name">res.partner.tenant.tree</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list string="Tenants" create="false">
                <field name="name"/>
                <field name="tenant_type"/>
                <field name="tenant_status"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <field name="active_leases_count"/>
            </list>
        </field>
    </record>

    <!-- Clean Tenant Kanban View -->
    <record id="view_res_partner_tenant_kanban" model="ir.ui.view">
        <field name="name">res.partner.tenant.kanban</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="tenant_type"/>
                <field name="tenant_status"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="active_leases_count"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="tenant_type"/> - <field name="tenant_status"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="phone" t-if="record.phone.raw_value"/>
                                        <field name="email" t-if="record.email.raw_value"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge badge-pill badge-success" t-if="record.active_leases_count.raw_value">
                                            <field name="active_leases_count"/> Active Leases
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Clean Tenant Form View -->
    <record id="view_res_partner_tenant_form" model="ir.ui.view">
        <field name="name">res.partner.tenant.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="tenant_info" string="Tenant Information" invisible="not is_tenant">
                    <group>
                        <group string="Tenant Details">
                            <field name="is_tenant"/>
                            <field name="tenant_type" required="is_tenant"/>
                            <field name="tenant_status"/>
                            <field name="resident_id_number" string="ID Number"/>
                        </group>
                        <group string="Business Information" invisible="tenant_type != 'company'">
                            <field name="license_number"/>
                            <field name="licensing_authority"/>
                        </group>
                    </group>
                    
                    <group string="Contact Information">
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="city"/>
                        </group>
                    </group>
                    
                    <group string="Current Leases">
                        <field name="lease_ids" nolabel="1">
                            <list string="Lease Agreements" create="false" delete="false">
                                <field name="name"/>
                                <field name="location"/>
                                <field name="state"/>
                                <field name="annual_rent"/>
                                <field name="contract_end_date"/>
                            </list>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Simplified Tenant Search View -->
    <record id="view_res_partner_tenant_filter" model="ir.ui.view">
        <field name="name">res.partner.tenant.search</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Tenants">
                <field name="name" string="Tenant Name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <separator/>
                <filter string="Individual" name="individual" domain="[('tenant_type', '=', 'individual')]"/>
                <filter string="Company" name="company" domain="[('tenant_type', '=', 'company')]"/>
                <separator/>
                <filter string="Active" name="active_tenants" domain="[('tenant_status', '=', 'active')]"/>
                <filter string="Has Active Leases" name="has_leases" domain="[('active_leases_count', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'tenant_type'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'tenant_status'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>