<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Permit Tree View -->
    <record id="view_workorder_permit_tree" model="ir.ui.view">
        <field name="name">facilities.workorder.permit.tree</field>
        <field name="model">facilities.workorder.permit</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="permit_type"/>
                <field name="status"/>
                <field name="issued_date"/>
                <field name="expiry_date"/>
                <field name="requested_by_id"/>
                <field name="approved_by_id"/>
                <field name="workorder_id"/>
            </list>
        </field>
    </record>

    <!-- Permit Action Window -->
    <record id="action_workorder_permit" model="ir.actions.act_window">
        <field name="name">Work Order Permits</field>
        <field name="res_model">facilities.workorder.permit</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first work order permit!
            </p>
            <p>
                Permits are required for certain types of maintenance work to ensure safety and compliance.
                Each permit must be associated with a work order and requires approval from the facility manager.
            </p>
            <p>
                <strong>Note:</strong> Permits can only be created and managed from this dedicated menu.
                They cannot be created directly from work order forms.
            </p>
        </field>
    </record>

    <!-- Permit Form View (Odoo 17 syntax, with statusbar, workflow buttons, and chatter) -->
    <record id="view_workorder_permit_form" model="ir.ui.view">
        <field name="name">facilities.workorder.permit.form</field>
        <field name="model">facilities.workorder.permit</field>
        <field name="arch" type="xml">
            <form string="Work Order Permit">
                <header>
                    <field name="status" widget="statusbar"
                        statusbar_visible="requested,pending_manager_approval,approved,rejected,expired"
                        statusbar_colors="{&quot;approved&quot;:&quot;green&quot;,&quot;rejected&quot;:&quot;red&quot;}"/>

                    <button name="action_submit_for_approval"
                            type="object"
                            string="Send to Facility Manager"
                            class="oe_highlight"
                            invisible="status != 'requested'"/>

                    <button name="action_approve"
                            type="object"
                            string="Approve"
                            class="btn-primary"
                            invisible="status != 'pending_manager_approval' or facility_manager_id != uid"/>

                    <button name="action_reject"
                            type="object"
                            string="Reject"
                            class="btn-danger"
                            invisible="status != 'pending_manager_approval' or facility_manager_id != uid"/>
                            
                    <button name="%(action_facility_manager_check_wizard)d"
                            type="action"
                            string="Check Manager Status"
                            class="btn-secondary"
                            help="Check the status of the facility manager assignment"/>
                </header>
                <sheet>
                    <group>
                        <group string="Permit Information">
                            <field name="name"/>
                            <field name="permit_type"/>
                            <field name="workorder_id" required="1" options="{'no_create': True}"/>
                            <field name="status"/>
                            <field name="issued_date"/>
                            <field name="expiry_date"/>
                        </group>
                        
                        <group string="Approval Information">
                            <field name="requested_by_id"/>
                            <field name="approved_by_id"/>
                            <field name="facility_manager_id" readonly="1" 
                                   help="This field shows the user account of the facility manager. If empty, check the facility manager assignment."/>
                            <!-- Do NOT use required here; enforce in Python only -->
                            <field name="rejected_reason"
                                   placeholder="Provide rejection reason if rejecting"/>
                        </group>
                    </group>
                    
                    <group string="Additional Information">
                        <field name="notes"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
</odoo>