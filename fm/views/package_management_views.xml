<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Package Management List View -->
    <record id="view_package_management_list" model="ir.ui.view">
        <field name="name">package.management.list</field>
        <field name="model">package.management</field>
        <field name="arch" type="xml">
            <list string="Packages" create="1" edit="1" delete="1">
                <field name="tracking_number"/>
                <field name="recipient_id"/>
                <field name="facility_id"/>
                <field name="package_type"/>
                <field name="received_date"/>
                <field name="days_in_storage"/>
                <field name="state" decoration-success="state == 'collected'" 
                       decoration-warning="state == 'notified'" 
                       decoration-info="state == 'ready'"
                       decoration-danger="state == 'returned'"/>
                <field name="is_overdue" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Package Management Form View -->
    <record id="view_package_management_form" model="ir.ui.view">
        <field name="name">package.management.form</field>
        <field name="model">package.management</field>
        <field name="arch" type="xml">
            <form string="Package">
                <header>
                    <button name="action_notify_recipient" string="Notify Recipient" 
                            type="object" class="oe_highlight"
                            invisible="state != 'received'"/>
                    <button name="action_mark_ready" string="Mark Ready" 
                            type="object" class="oe_highlight"
                            invisible="state not in ['received', 'notified']"/>
                    <button name="action_collect_package" string="Collect Package" 
                            type="object" class="oe_highlight"
                            invisible="state not in ['notified', 'ready']"/>
                    <button name="action_return_to_sender" string="Return to Sender" 
                            type="object" invisible="state == 'collected'"
                            confirm="Are you sure you want to return this package to sender?"/>
                    <button name="action_dispose_package" string="Dispose" 
                            type="object" invisible="state == 'collected'"
                            confirm="Are you sure you want to dispose this package?"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="received,notified,ready,collected"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" 
                                name="action_notify_recipient" icon="fa-envelope"
                                invisible="state == 'received'">
                            <field name="notification_date" widget="statinfo" 
                                   string="Notified"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="tracking_number" readonly="1"/>
                        </h1>
                        <div invisible="not is_overdue">
                            <div class="alert alert-warning" role="alert">
                                <strong>Warning:</strong> Package has been in storage for 
                                <field name="days_in_storage"/> days and is overdue for collection!
                            </div>
                        </div>
                    </div>
                    <group>
                        <group string="Recipient Information">
                            <field name="recipient_id"/>
                            <field name="recipient_phone"/>
                            <field name="recipient_email"/>
                        </group>
                        <group string="Package Details">
                            <field name="package_reference"/>
                            <field name="carrier_id"/>
                            <field name="carrier_name"/>
                            <field name="package_type"/>
                        </group>
                    </group>
                    <group>
                        <group string="Location">
                            <field name="facility_id"/>
                            <field name="building_id"/>
                            <field name="floor_id"/>
                            <field name="room_id"/>
                            <field name="storage_location"/>
                        </group>
                        <group string="Package Attributes">
                            <field name="package_size"/>
                            <field name="package_weight"/>
                            <field name="is_fragile"/>
                            <field name="is_perishable"/>
                            <field name="requires_signature"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="package_description" nolabel="1"/>
                    </group>
                    <group>
                        <group string="Reception">
                            <field name="received_date"/>
                            <field name="received_by_id"/>
                        </group>
                        <group string="Collection" invisible="state != 'collected'">
                            <field name="collection_date"/>
                            <field name="collected_by_id"/>
                            <field name="collected_by_staff_id"/>
                        </group>
                    </group>
                    <group string="Special Instructions">
                        <field name="special_instructions" nolabel="1"/>
                    </group>
                    <group string="Internal Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Package Image">
                            <field name="package_image" widget="image" class="oe_avatar"/>
                        </page>
                        <page string="Signature" invisible="state != 'collected'">
                            <field name="signature" widget="image"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Package Management Search View -->
    <record id="view_package_management_search" model="ir.ui.view">
        <field name="name">package.management.search</field>
        <field name="model">package.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="tracking_number"/>
                <field name="recipient_id"/>
                <field name="facility_id"/>
                <field name="package_reference"/>
                <separator/>
                <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                <filter string="Notified" name="notified" domain="[('state', '=', 'notified')]"/>
                <filter string="Ready for Collection" name="ready" domain="[('state', '=', 'ready')]"/>
                <filter string="Collected" name="collected" domain="[('state', '=', 'collected')]"/>
                <separator/>
                <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <filter string="Perishable" name="perishable" domain="[('is_perishable', '=', True)]"/>
                <filter string="Fragile" name="fragile" domain="[('is_fragile', '=', True)]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('received_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('received_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
            <filter string="Recipient" name="group_recipient" context="{'group_by': 'recipient_id'}"/>
            <filter string="Facility" name="group_facility" context="{'group_by': 'facility_id'}"/>
            <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
            <filter string="Package Type" name="group_type" context="{'group_by': 'package_type'}"/>
            <filter string="Received Date" name="group_received_date" context="{'group_by': 'received_date'}"/>
            </search>
        </field>
    </record>

    <!-- Package Management Kanban View -->
    <record id="view_package_management_kanban" model="ir.ui.view">
        <field name="name">package.management.kanban</field>
        <field name="model">package.management</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="tracking_number"/>
                <field name="recipient_id"/>
                <field name="package_type"/>
                <field name="received_date"/>
                <field name="state"/>
                <field name="is_overdue"/>
                <field name="days_in_storage"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="tracking_number"/>
                                        </strong>
                                    </div>
                                    <span class="badge" t-if="record.is_overdue.raw_value" 
                                          style="background-color: #d9534f;">Overdue</span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="recipient_id"/>
                                    <br/>
                                    <span class="text-muted">
                                        <i class="fa fa-calendar"/> <field name="received_date"/>
                                    </span>
                                    <br/>
                                    <span class="text-muted">
                                        Storage: <field name="days_in_storage"/> days
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge">
                                            <field name="package_type"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Package Management Action -->
    <record id="action_package_management" model="ir.actions.act_window">
        <field name="name">Package Management</field>
        <field name="res_model">package.management</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_received': 1, 'search_default_notified': 1, 'search_default_ready': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first package record
            </p>
            <p>
                Track packages and deliveries received at your facilities.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_package_management_root"
              name="Packages"
              parent="menu_facilities_root"
              sequence="60"/>

    <menuitem id="menu_package_management"
              name="All Packages"
              parent="menu_package_management_root"
              action="action_package_management"
              sequence="10"/>

</odoo>










