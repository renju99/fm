<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List view -->
        <record id="view_facilities_report_recipient_tree" model="ir.ui.view">
            <field name="name">facilities.report.recipient.tree</field>
            <field name="model">facilities.report.recipient</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="active"/>
                    <field name="report_action_id"/>
                    <field name="report_name"/>
                    <field name="facility_id"/>
                </list>
            </field>
        </record>

        <!-- Search view -->
        <record id="view_facilities_report_recipient_search" model="ir.ui.view">
            <field name="name">facilities.report.recipient.search</field>
            <field name="model">facilities.report.recipient</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="report_action_id"/>
                    <field name="facility_id"/>
                    <filter name="filter_active" string="Active" domain="[('active','=',True)]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_report" string="Report" context="{'group_by':'report_action_id'}"/>
                        <filter name="group_by_facility" string="Facility" context="{'group_by':'facility_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_facilities_report_recipient_form" model="ir.ui.view">
            <field name="name">facilities.report.recipient.form</field>
            <field name="model">facilities.report.recipient</field>
            <field name="arch" type="xml">
                <form string="Report Recipient">
                    <sheet>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="report_action_id" domain="[('report_type','ilike','qweb')]"/>
                                <field name="facility_id"/>
                                <field name="user_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="report_name" readonly="1"/>
                                <field name="report_model" readonly="1"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_facilities_report_recipient" model="ir.actions.act_window">
            <field name="name">Report Recipients</field>
            <field name="res_model">facilities.report.recipient</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_facilities_report_recipient_search"/>
        </record>

    </data>
</odoo>

