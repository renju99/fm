<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Visitor Management List View -->
    <record id="view_visitor_management_list" model="ir.ui.view">
        <field name="name">visitor.management.list</field>
        <field name="model">visitor.management</field>
        <field name="arch" type="xml">
            <list string="Visitors" create="1" edit="1" delete="1">
                <field name="visitor_number"/>
                <field name="visitor_name"/>
                <field name="visitor_company"/>
                <field name="host_id"/>
                <field name="facility_id"/>
                <field name="visit_date"/>
                <field name="visit_purpose"/>
                <field name="check_in_time"/>
                <field name="check_out_time"/>
                <field name="state" decoration-success="state == 'checked_out'" 
                       decoration-warning="state == 'pending_approval'" 
                       decoration-info="state == 'checked_in'"
                       decoration-danger="state == 'denied'"/>
            </list>
        </field>
    </record>

    <!-- Visitor Management Form View -->
    <record id="view_visitor_management_form" model="ir.ui.view">
        <field name="name">visitor.management.form</field>
        <field name="model">visitor.management</field>
        <field name="arch" type="xml">
            <form string="Visitor">
                <header>
                    <button name="action_request_approval" string="Request Approval" 
                            type="object" class="oe_highlight"
                            invisible="state != 'pre_registered'"/>
                    <button name="action_approve_visit" string="Approve Visit" 
                            type="object" class="oe_highlight"
                            invisible="state not in ['pre_registered', 'pending_approval']"/>
                    <button name="action_deny_visit" string="Deny Access" 
                            type="object" 
                            invisible="state in ['checked_in', 'checked_out', 'denied']"/>
                    <button name="action_check_in" string="Check In" 
                            type="object" class="oe_highlight"
                            invisible="state != 'approved'"/>
                    <button name="action_check_out" string="Check Out" 
                            type="object" class="oe_highlight"
                            invisible="state != 'checked_in'"/>
                    <button name="action_cancel_visit" string="Cancel" 
                            type="object" 
                            invisible="state in ['checked_in', 'checked_out']"
                            confirm="Are you sure you want to cancel this visit?"/>
                    <button name="action_mark_no_show" string="Mark No Show" 
                            type="object" 
                            invisible="state not in ['approved', 'pending_approval']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="pre_registered,pending_approval,approved,checked_in,checked_out"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" icon="fa-clock-o"
                                invisible="state != 'checked_out'">
                            <field name="duration" widget="statinfo" string="Duration (hrs)"/>
                        </button>
                    </div>
                    <field name="visitor_photo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="visitor_number" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="visitor_name" placeholder="Visitor Name" required="1"/>
                        </h2>
                    </div>
                    <group>
                        <group string="Visitor Information">
                            <field name="visitor_email"/>
                            <field name="visitor_phone"/>
                            <field name="visitor_company"/>
                            <field name="visitor_id_type"/>
                            <field name="visitor_id_number"/>
                        </group>
                        <group string="Visit Details">
                            <field name="visit_date"/>
                            <field name="visit_purpose"/>
                            <field name="visit_description"/>
                        </group>
                    </group>
                    <group>
                        <group string="Host Information">
                            <field name="host_id"/>
                            <field name="host_phone"/>
                            <field name="host_email"/>
                            <field name="host_notified"/>
                            <field name="host_approval"/>
                        </group>
                        <group string="Location">
                            <field name="facility_id"/>
                            <field name="building_id"/>
                            <field name="floor_id"/>
                            <field name="room_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Access Control">
                            <field name="security_clearance"/>
                            <field name="visitor_badge_number" readonly="1"/>
                            <field name="access_card_number"/>
                            <field name="escort_required"/>
                            <field name="escort_id" invisible="not escort_required"/>
                            <field name="access_areas" invisible="1"/>
                        </group>
                        <group string="Check-in/out">
                            <field name="check_in_time" readonly="1"/>
                            <field name="checked_in_by_id" readonly="1"/>
                            <field name="check_out_time" readonly="1"/>
                            <field name="checked_out_by_id" readonly="1"/>
                        </group>
                    </group>
                    <group invisible="not has_vehicle">
                        <group string="Vehicle Information">
                            <field name="has_vehicle"/>
                            <field name="vehicle_type"/>
                            <field name="vehicle_registration"/>
                            <field name="parking_spot"/>
                        </group>
                        <group string="Equipment" invisible="not has_equipment">
                            <field name="has_equipment"/>
                            <field name="equipment_description"/>
                            <field name="equipment_checked"/>
                        </group>
                    </group>
                    <group>
                        <group string="Security &amp; Compliance">
                            <field name="nda_signed"/>
                            <field name="safety_briefing"/>
                            <field name="health_declaration"/>
                            <field name="temperature_check"/>
                        </group>
                        <group string="Notes">
                            <field name="notes" nolabel="1" placeholder="Internal notes..."/>
                        </group>
                    </group>
                    <group string="Security Notes">
                        <field name="security_notes" nolabel="1" placeholder="Security-related observations..."/>
                    </group>
                    <notebook>
                        <page string="QR Code" invisible="visitor_number == 'New'">
                            <field name="qr_code" widget="image"/>
                            <div class="text-muted">
                                Use this QR code for quick check-in
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Visitor Management Search View -->
    <record id="view_visitor_management_search" model="ir.ui.view">
        <field name="name">visitor.management.search</field>
        <field name="model">visitor.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="visitor_number"/>
                <field name="visitor_name"/>
                <field name="visitor_company"/>
                <field name="host_id"/>
                <field name="facility_id"/>
                <field name="visitor_phone"/>
                <separator/>
                <filter string="Pre-registered" name="pre_registered" domain="[('state', '=', 'pre_registered')]"/>
                <filter string="Pending Approval" name="pending_approval" domain="[('state', '=', 'pending_approval')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Checked In" name="checked_in" domain="[('state', '=', 'checked_in')]"/>
                <filter string="Checked Out" name="checked_out" domain="[('state', '=', 'checked_out')]"/>
                <filter string="Denied" name="denied" domain="[('state', '=', 'denied')]"/>
                <separator/>
                <filter string="Requires Escort" name="requires_escort" domain="[('escort_required', '=', True)]"/>
                <filter string="High Security" name="high_security" domain="[('security_clearance', 'in', ['high', 'restricted'])]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('visit_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" 
                        domain="[('visit_date', '&gt;=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="Currently On-site" name="on_site" domain="[('state', '=', 'checked_in')]"/>
                <separator/>
            <filter string="Visitor" name="group_visitor" context="{'group_by': 'visitor_name'}"/>
            <filter string="Host" name="group_host" context="{'group_by': 'host_id'}"/>
            <filter string="Facility" name="group_facility" context="{'group_by': 'facility_id'}"/>
            <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
            <filter string="Purpose" name="group_purpose" context="{'group_by': 'visit_purpose'}"/>
            <filter string="Visit Date" name="group_visit_date" context="{'group_by': 'visit_date'}"/>
            </search>
        </field>
    </record>

    <!-- Visitor Management Kanban View -->
    <record id="view_visitor_management_kanban" model="ir.ui.view">
        <field name="name">visitor.management.kanban</field>
        <field name="model">visitor.management</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="visitor_number"/>
                <field name="visitor_name"/>
                <field name="visitor_company"/>
                <field name="host_id"/>
                <field name="visit_date"/>
                <field name="visit_purpose"/>
                <field name="state"/>
                <field name="escort_required"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="visitor_name"/>
                                        </strong>
                                        <br/>
                                        <span class="text-muted">
                                            <field name="visitor_number"/>
                                        </span>
                                    </div>
                                    <span class="badge badge-warning" t-if="record.escort_required.raw_value">
                                        Escort Required
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span t-if="record.visitor_company.raw_value">
                                        <i class="fa fa-building"/> <field name="visitor_company"/>
                                        <br/>
                                    </span>
                                    <span>
                                        <i class="fa fa-user"/> Host: <field name="host_id"/>
                                    </span>
                                    <br/>
                                    <span class="text-muted">
                                        <i class="fa fa-calendar"/> <field name="visit_date"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge">
                                            <field name="visit_purpose"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Visitor Management Calendar View -->
    <record id="view_visitor_management_calendar" model="ir.ui.view">
        <field name="name">visitor.management.calendar</field>
        <field name="model">visitor.management</field>
        <field name="arch" type="xml">
            <calendar string="Visitor Schedule" date_start="visit_date" 
                      color="state" mode="week">
                <field name="visitor_name"/>
                <field name="host_id"/>
                <field name="visit_purpose"/>
            </calendar>
        </field>
    </record>

    <!-- Visitor Management Action -->
    <record id="action_visitor_management" model="ir.actions.act_window">
        <field name="name">Visitor Management</field>
        <field name="res_model">visitor.management</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="context">{'search_default_today': 1, 'search_default_on_site': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a new visitor
            </p>
            <p>
                Manage visitors to your facilities with check-in/out tracking and security.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_visitor_management_root"
              name="Visitors"
              parent="menu_facilities_root"
              sequence="70"/>

    <menuitem id="menu_visitor_management"
              name="All Visitors"
              parent="menu_visitor_management_root"
              action="action_visitor_management"
              sequence="10"/>

    <menuitem id="menu_visitor_on_site"
              name="Currently On-site"
              parent="menu_visitor_management_root"
              action="action_visitor_management"
              sequence="20"/>

</odoo>










