<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sustainability Report List View -->
    <record id="view_sustainability_report_list" model="ir.ui.view">
        <field name="name">facilities.sustainability.report.list</field>
        <field name="model">facilities.sustainability.report</field>
        <field name="arch" type="xml">
            <list string="Sustainability Reports" 
                  decoration-info="state == 'published'" 
                  decoration-muted="state == 'draft'"
                  decoration-warning="state == 'review'"
                  decoration-success="state == 'approved'">
                <field name="report_code"/>
                <field name="name"/>
                <field name="report_type"/>
                <field name="report_date"/>
                <field name="period_start_date"/>
                <field name="period_end_date"/>
                <field name="facility_id"/>
                <field name="total_energy_cost"/>
                <field name="currency_id" invisible="1"/>
                <field name="total_co2_emissions"/>
                <field name="overall_sustainability_score"/>
                <field name="target_achievement" widget="badge"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Sustainability Report Form View -->
    <record id="view_sustainability_report_form" model="ir.ui.view">
        <field name="name">facilities.sustainability.report.form</field>
        <field name="model">facilities.sustainability.report</field>
        <field name="arch" type="xml">
            <form string="Sustainability Report">
                <header>
                    <button name="action_start_report" type="object" string="Start Report" 
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_send_for_review" type="object" string="Send for Review" 
                            invisible="state != 'in_progress'" class="btn-info"/>
                    <button name="action_approve" type="object" string="Approve" 
                            invisible="state != 'review'" class="btn-success"/>
                    <button name="action_publish" type="object" string="Publish" 
                            invisible="state != 'approved'" class="btn-primary"/>
                    <button name="action_archive" type="object" string="Archive" 
                            invisible="state != 'published'" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,review,approved,published"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="generate_detailed_breakdown" type="object" 
                                class="oe_stat_button" icon="fa-bar-chart">
                            <field name="meter_consumption_ids" widget="statinfo" 
                                   string="Meter Summary"/>
                        </button>
                        <button name="action_view_facility_breakdown" type="object" 
                                class="oe_stat_button" icon="fa-building">
                            <field name="facility_breakdown_ids" widget="statinfo" 
                                   string="Facility Summary"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Report Name"/>
                        </h1>
                        <h3>
                            <field name="report_code" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="report_type"/>
                            <field name="report_date"/>
                            <field name="period_start_date"/>
                            <field name="period_end_date"/>
                            <field name="include_all_facilities"/>
                            <field name="facility_id" invisible="include_all_facilities == True"/>
                        </group>
                        <group name="goals" string="Goals and Targets">
                            <field name="energy_reduction_target"/>
                            <field name="water_reduction_target"/>
                            <field name="target_achievement" readonly="1"/>
                            <field name="renewable_energy_percentage"/>
                            <field name="waste_reduction_percentage"/>
                            <field name="recycling_rate"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="energy_summary" string="Energy Consumption Summary">
                            <field name="total_electricity_consumption" readonly="1"/>
                            <field name="total_water_consumption" readonly="1"/>
                            <field name="total_gas_consumption" readonly="1"/>
                            <field name="total_steam_consumption" readonly="1"/>
                            <field name="total_energy_cost" readonly="1"/>
                            <field name="currency_id"/>
                        </group>
                        <group name="efficiency_metrics" string="Efficiency Metrics">
                            <field name="energy_efficiency_index" readonly="1"/>
                            <field name="water_efficiency_index" readonly="1"/>
                            <field name="overall_sustainability_score" readonly="1"/>
                            <field name="cost_per_sqm" readonly="1"/>
                            <field name="cost_per_occupant" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="carbon_footprint" string="Carbon Footprint">
                            <field name="total_co2_emissions" readonly="1"/>
                            <field name="co2_emissions_per_sqm" readonly="1"/>
                            <field name="co2_emissions_per_occupant" readonly="1"/>
                        </group>
                        <group name="comparison" string="Comparison with Previous Period">
                            <field name="previous_period_consumption" readonly="1"/>
                            <field name="consumption_change_percentage" readonly="1"/>
                            <field name="cost_change_percentage" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="certifications" string="Certifications and Standards">
                            <field name="leed_certification"/>
                            <field name="iso_14001_compliance"/>
                            <field name="energy_star_rating"/>
                        </group>
                        <group name="approval" string="Approval">
                            <field name="prepared_by_id"/>
                            <field name="reviewed_by_id" invisible="state in ['draft', 'in_progress']"/>
                            <field name="approved_by_id" invisible="state in ['draft', 'in_progress', 'review']"/>
                            <field name="review_date" invisible="state in ['draft', 'in_progress']"/>
                            <field name="approval_date" invisible="state in ['draft', 'in_progress', 'review']"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Executive Summary" name="executive_summary">
                            <field name="executive_summary" nolabel="1"/>
                        </page>
                        <page string="Key Findings" name="key_findings">
                            <field name="key_findings" nolabel="1"/>
                        </page>
                        <page string="Recommendations" name="recommendations">
                            <field name="recommendations" nolabel="1"/>
                        </page>
                        <page string="Action Items" name="action_items">
                            <field name="action_items" nolabel="1"/>
                        </page>
                        <page string="Meter Summary" name="meter_summary">
                            <field name="meter_consumption_ids" readonly="1">
                                <list string="Meter Consumption Summary">
                                    <field name="meter_name"/>
                                    <field name="meter_type"/>
                                    <field name="facility_name"/>
                                    <field name="total_consumption"/>
                                    <field name="total_cost"/>
                                    <field name="readings_count"/>
                                    <field name="average_consumption"/>
                                </list>
                            </field>
                        </page>
                        <page string="Facility Breakdown" name="facility_breakdown">
                            <field name="facility_breakdown_ids" readonly="1">
                                <list string="Facility Breakdown">
                                    <field name="facility_name"/>
                                    <field name="total_consumption"/>
                                    <field name="total_cost"/>
                                    <field name="meter_count"/>
                                    <field name="consumption_per_meter"/>
                                </list>
                            </field>
                        </page>
                        <page string="Attachments" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Sustainability Report Search View -->
    <record id="view_sustainability_report_search" model="ir.ui.view">
        <field name="name">facilities.sustainability.report.search</field>
        <field name="model">facilities.sustainability.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="report_code"/>
                <field name="facility_id"/>
                <field name="prepared_by_id"/>
                <field name="reviewed_by_id"/>
                <field name="approved_by_id"/>
                
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Under Review" name="review" domain="[('state', '=', 'review')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Archived" name="archived" domain="[('state', '=', 'archived')]"/>
                
                <separator/>
                <filter string="Monthly" name="monthly" domain="[('report_type', '=', 'monthly')]"/>
                <filter string="Quarterly" name="quarterly" domain="[('report_type', '=', 'quarterly')]"/>
                <filter string="Annual" name="annual" domain="[('report_type', '=', 'annual')]"/>
                <filter string="Custom" name="custom" domain="[('report_type', '=', 'custom')]"/>
                
                <separator/>
                <filter string="This Year" name="this_year" domain="[('report_date', '>=', datetime.datetime.combine(context_today().replace(month=1, day=1), datetime.time(0,0,0)))]"/>
                <filter string="Last 3 Months" name="last_3_months" domain="[('report_date', '>=', (context_today() - relativedelta(months=3)))]"/>
                
                <separator/>
                <filter string="Target Exceeded" name="target_exceeded" domain="[('target_achievement', '=', 'exceeded')]"/>
                <filter string="Target Met" name="target_met" domain="[('target_achievement', '=', 'met')]"/>
                <filter string="Target Not Met" name="target_not_met" domain="[('target_achievement', '=', 'not_met')]"/>
                
            <filter string="Report Type" name="group_type" context="{'group_by': 'report_type'}"/>
            <filter string="Facility" name="group_facility" context="{'group_by': 'facility_id'}"/>
            <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
            <filter string="Target Achievement" name="group_target" context="{'group_by': 'target_achievement'}"/>
            <filter string="Report Date" name="group_date" context="{'group_by': 'report_date:year'}"/>
            </search>
        </field>
    </record>

    <!-- Sustainability Report Kanban View -->
    <record id="view_sustainability_report_kanban" model="ir.ui.view">
        <field name="name">facilities.sustainability.report.kanban</field>
        <field name="model">facilities.sustainability.report</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="report_type"/>
                <field name="facility_id"/>
                <field name="report_date"/>
                <field name="period_start_date"/>
                <field name="period_end_date"/>
                <field name="state"/>
                <field name="target_achievement"/>
                <field name="overall_sustainability_score"/>
                <field name="total_energy_cost"/>
                <field name="total_co2_emissions"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="report_type"/> - <field name="facility_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="target_achievement" widget="label_selection" 
                                               options="{'classes': {'exceeded': 'success', 'met': 'success', 'partial': 'warning', 'not_met': 'danger'}}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="text-muted">Period</div>
                                            <div><field name="period_start_date"/> - <field name="period_end_date"/></div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-muted">Sustainability Score</div>
                                            <div><field name="overall_sustainability_score"/>/100</div>
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-6">
                                            <div class="text-muted">Total Cost</div>
                                            <div><field name="total_energy_cost"/></div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-muted">COâ‚‚ Emissions</div>
                                            <div><field name="total_co2_emissions"/> kg</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Sustainability Report Graph View -->
    <record id="view_sustainability_report_graph" model="ir.ui.view">
        <field name="name">facilities.sustainability.report.graph</field>
        <field name="model">facilities.sustainability.report</field>
        <field name="arch" type="xml">
            <graph string="Sustainability Report Analysis" type="bar">
                <field name="report_date" type="row"/>
                <field name="total_energy_cost" type="measure"/>
                <field name="total_co2_emissions" type="measure"/>
                <field name="overall_sustainability_score" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Sustainability Report Actions -->
    <record id="action_sustainability_report" model="ir.actions.act_window">
        <field name="name">Sustainability Reports</field>
        <field name="res_model">facilities.sustainability.report</field>
        <field name="view_mode">list,kanban,form,graph</field>
        <field name="search_view_id" ref="view_sustainability_report_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first sustainability report!
            </p>
            <p>
                Generate comprehensive sustainability reports to track energy consumption,
                environmental impact, and efficiency metrics across your facilities.
            </p>
        </field>
    </record>
</odoo>
