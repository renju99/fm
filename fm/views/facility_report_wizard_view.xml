<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_facility_report_wizard_form" model="ir.ui.view">
        <field name="name">facility.report.wizard.form</field>
        <field name="model">facility.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Facility Report">
                <group>
                    <field name="facility_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="action_generate_facility_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>