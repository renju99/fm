<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Enhanced Task Tree View -->
    <record id="view_maintenance_workorder_task_enhanced_tree" model="ir.ui.view">
        <field name="name">facilities.workorder.task.enhanced.tree</field>
        <field name="model">facilities.workorder.task</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <list decoration-success="is_done" decoration-warning="not is_done" editable="bottom">
                <field name="sequence" readonly="1"/>
                <field name="name"/>
                <field name="section_id" optional="show"/>
                <field name="is_done" widget="boolean_toggle"/>
                <field name="duration" optional="show"/>
                <field name="responsible_id" optional="show"/>
                <field name="workorder_id" optional="show"/>
                <field name="workorder_status" optional="show"/>
                <field name="is_checklist_item" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Enhanced Task Form View -->
    <record id="view_maintenance_workorder_task_enhanced_form" model="ir.ui.view">
        <field name="name">facilities.workorder.task.enhanced.form</field>
        <field name="model">facilities.workorder.task</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="toggle_task_completion" type="object" string="Toggle Completion" class="oe_highlight"
                            help="Mark task as completed or incomplete"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Task Description"/></h1>
                    </div>
                    
                    <group>
                        <group string="Task Information" col="2">
                            <field name="workorder_id"/>
                            <field name="section_id"/>
                            <field name="sequence"/>
                            <field name="is_checklist_item"/>
                            <field name="is_done"/>
                            <field name="duration"/>
                        </group>
                        <group string="Assignment &amp; Resources" col="2">
                            <field name="responsible_id"/>
                            <field name="workorder_status" readonly="1"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="frequency_type"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Instructions &amp; Details">
                            <field name="description" placeholder="Detailed instructions for this task..."/>
                        </page>
                        <page string="Tools &amp; Materials">
                            <field name="tools_materials" placeholder="List required tools and materials..."/>
                        </page>
                        <page string="Execution Notes">
                            <field name="notes" placeholder="Add notes during task execution..."/>
                        </page>
                        <page string="Before/After Images">
                            <group>
                                <group string="Before Image">
                                    <field name="before_image" widget="image"/>
                                    <field name="before_image_filename"/>
                                </group>
                                <group string="After Image">
                                    <field name="after_image" widget="image"/>
                                    <field name="after_image_filename"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Task Dashboard View -->
    <record id="view_maintenance_workorder_task_dashboard" model="ir.ui.view">
        <field name="name">facilities.workorder.task.dashboard</field>
        <field name="model">facilities.workorder.task</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="workorder_id">
                <field name="workorder_id"/>
                <field name="section_id"/>
                <field name="name"/>
                <field name="is_done"/>
                <field name="sequence"/>
                <field name="duration"/>
                <field name="responsible_id"/>
                <templates>
                    <t>
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span class="badge badge-success" invisible="not is_done">
                                            <i class="fa fa-check"></i> Done
                                        </span>
                                        <span class="badge badge-warning" invisible="is_done">
                                            <i class="fa fa-clock-o" title="Pending task"></i> Pending
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="text-muted" invisible="not section_id">
                                        <i class="fa fa-folder" title="Section"></i> <field name="section_id"/>
                                    </div>
                                    <div class="text-muted" invisible="not duration">
                                        <i class="fa fa-clock-o" title="Duration"></i> <field name="duration"/>h
                                    </div>
                                    <div class="text-muted" invisible="not responsible_id">
                                        <i class="fa fa-user" title="Responsible person"></i> <field name="responsible_id"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Enhanced Action for Tasks -->
    <record id="action_maintenance_workorder_task_enhanced" model="ir.actions.act_window">
        <field name="name">Work Order Tasks (Enhanced)</field>
        <field name="res_model">facilities.workorder.task</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('fm.view_maintenance_workorder_task_enhanced_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('fm.view_maintenance_workorder_task_enhanced_form')}),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('fm.view_maintenance_workorder_task_dashboard')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first enhanced task!
            </p>
        </field>
    </record>

    <!-- Mobile Form View for Maintenance Workorder Tasks -->
    <record id="view_maintenance_workorder_task_mobile_form" model="ir.ui.view">
        <field name="name">facilities.workorder.task.mobile.form</field>
        <field name="model">facilities.workorder.task</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form string="Task (Mobile)" class="o_mobile_form">
                <header>
                    <field name="workorder_id" invisible="1"/>
                    <div class="alert alert-info" role="alert" invisible="workorder_id.state == 'in_progress'">
                        <i class="fa fa-info-circle me-2" title="Information"></i>
                        <strong>Work Order must be "In Progress" to complete tasks and upload images.</strong>
                    </div>
                </header>
                
                <sheet>
                    <div class="oe_title text-center mb-4">
                        <h2 class="text-primary"><field name="name"/></h2>
                        <p class="text-muted"><field name="section_id"/></p>
                    </div>

                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fa fa-info-circle me-2" title="Task details"></i>Task Details</h5>
                        </div>
                        <div class="card-body">
                            <field name="description"/>
                            <field name="is_done" widget="boolean_toggle" string="Mark as Complete"/>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-warning text-white">
                            <h5 class="mb-0"><i class="fa fa-camera me-2"></i>Before/After Images</h5>
                        </div>
                        <div class="card-body">
                            <group>
                                <field name="before_image" widget="image" string="Before Image" help="Upload image before starting the task"/>
                                <field name="after_image" widget="image" string="After Image" help="Upload image after completing the task"/>
                            </group>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fa fa-sticky-note me-2"></i>Notes</h5>
                        </div>
                        <div class="card-body">
                            <field name="notes" placeholder="Add notes about the task execution..."/>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Mobile Action for Tasks -->
    <record id="action_maintenance_workorder_task_mobile" model="ir.actions.act_window">
        <field name="name">Task (Mobile)</field>
        <field name="res_model">facilities.workorder.task</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="fm.view_maintenance_workorder_task_mobile_form"/>
        <field name="target">current</field>
        <field name="context">{'mobile_view': True}</field>
    </record>

